<UserControl x:Class="Blackjack.Controls.PlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="PlayerCardsPanel" HorizontalAlignment="Center" Orientation="Horizontal" Width="Auto" Grid.Row="0">
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label x:Name="LabelPlayerName" FontStyle="Italic">Name:</Label>
            <Label x:Name="LabelPlayerHandScore" FontStyle="Italic" >Hand score:</Label>
        </StackPanel>
    </Grid>
</UserControl>
